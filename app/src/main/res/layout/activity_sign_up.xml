<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".ui.login.SignUpActivity">

    <!--logo Image view -->
    <ImageView
        android:id="@+id/imgView_logo"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/img_logo"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/logo1" />
    <!--Logo text view -->
    <TextView
        android:id="@+id/tv_gamer_finder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fightingspirit"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:paddingBottom="20dp"
        android:scaleType="fitCenter"
        android:textAllCaps="true"
        android:text="@string/GamerFinder"
        android:textColor="#DBE2EF"
        android:textSize="12sp"
        android:layout_below="@id/imgView_logo"/>
    <!-- /////////////////////// -->
    <TextView
        android:id="@+id/tv_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/fightingspirit"
        android:paddingBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:scaleType="fitCenter"
        android:textAllCaps="true"
        android:text="@string/tv_SignUp"
        android:textColor="#DBE2EF"
        android:textSize="22sp"
        android:layout_below="@id/imgView_logo"/>
    <!-- /////////////////////// -->
    <!--Linlay_01 -->
    <LinearLayout
        android:id="@+id/Linlay_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_SignUp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        >

        <ImageView
            android:id="@+id/iv_mail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/mail"
            android:padding="8dp"
            android:tint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/SignUpEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@+id/iv_mail"
            android:background="@drawable/et_bg"
            android:layout_toRightOf="@id/iv_mail"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingTop="3dp"
            android:paddingLeft="20dp"
            android:paddingRight="6dp"
            android:textSize="15sp"
            />
    </LinearLayout>
    <!--Details Sign Up Lines-->
    <!--Linlay_02 -->
    <LinearLayout
        android:id="@+id/Linlay_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linlay_01"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        >

        <ImageView
            android:id="@+id/iv_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lock"
            android:padding="8dp"
            android:tint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/SignUpPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignBaseline="@+id/iv_lock"
            android:background="@drawable/et_bg"
            android:layout_toRightOf="@id/iv_lock"
            android:gravity="left"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:textSize="15sp"
            />
    </LinearLayout>
    <!--Linlay_03 -->
    <LinearLayout
        android:id="@+id/Linlay_03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Linlay_02"
        android:layout_marginTop="10dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        >

        <ImageView
            android:id="@+id/iv_lock_Confirm"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/lock"
            android:padding="8dp"
            android:tint="@color/colorAccent"
            />

        <EditText
            android:id="@+id/ConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBaseline="@+id/iv_lock"
            android:background="@drawable/et_bg"
            android:layout_toRightOf="@id/iv_lock"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:gravity="left"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="6dp"
            android:paddingBottom="6dp"
            android:textSize="15sp"
            />
    </LinearLayout>
    <!-- /////////////////////// -->
    <!--Login Now Button -->
    <Button
        android:id="@+id/btn_SignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/Linlay_03"
        android:text="@string/btn_SignUp"
        android:textAllCaps="false"
        android:background="@drawable/btn_bg"
        android:fontFamily="sans-serif-medium"
        android:textColor="#DBE2EF"
        android:layout_marginTop="20dp"
        android:paddingLeft="70dp"
        android:paddingRight="70dp"
        android:textSize="16sp" />
    <!-- /////////////////////// -->
    <!--OR CONTINUE WITH TEXT -->
    <TextView
        android:id="@+id/txt_continue_with"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/or_continue_with"
        android:layout_below="@id/btn_SignUp"
        android:gravity="center"
        android:layout_marginTop="10sp"
        android:textSize="15sp"
        android:textColor="@color/color_gray_text"/>
    <!-- /////////////////////// -->
    <!--LinearLayout ICONS SOCIAL MEDIA -->
    <LinearLayout
        android:id="@+id/Icons_social"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_continue_with"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="@drawable/white_line" />
        <ImageButton
            android:id="@+id/facebook_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/facebookicon"
            android:contentDescription="btn_facebook"
            android:translationY="5dp"/>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/white_line" />
        <ImageButton
            android:id="@+id/google_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:translationY="5dp"
            android:background="@drawable/googleicon"
            android:contentDescription="btn_google" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/white_line" />

        <ImageButton
            android:id="@+id/steam_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/iconfinder_steam_171938"
            android:contentDescription="btn_steam"
            android:translationY="5dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/white_line" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Icons_social">

        <!--Terms SignUp CheckBox-->
        <CheckBox
            android:id="@+id/Checkbox_Terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:text="@string/Terms_SignUp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-medium"
            android:textSize="15sp"
            android:layout_alignParentTop="true"
            />

        <LinearLayout
            android:id="@+id/Linlay_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Checkbox_Terms"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="25dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif-light"
                android:text="@string/btn_Sign_in"
                android:textAllCaps="false"
                android:textColor="@color/color_green_text"
                android:textSize="15sp"
                android:onClick="loginButton"/>

            <TextView
                android:id="@+id/tv_Already_Sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/Already_SignUp"
                android:textSize="15sp"
                android:textColor="@color/colorAccent"/>

        </LinearLayout>
    </RelativeLayout>






</RelativeLayout>

